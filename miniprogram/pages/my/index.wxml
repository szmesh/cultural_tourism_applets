  <view class="user-info bottom-margin-container">
    <!-- <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button> -->
    <block wx:if="{{!globalData.isLogin}}">
      <image class="userinfo-avatar" src="../../images/user-unlogin.png" mode="cover"></image>
      <button type="primary" bindtap="doWXLogin">微信登录</button>
    </block>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname font-h2">{{userInfo.nickName}}</text>
    </block>
    <!-- <button type='primary' bindtap='myBill' size='mini'>支付测试</button> -->
