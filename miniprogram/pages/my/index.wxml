      <image class='channel-icon' src='../../images/my/orders.png'></image>
      <text>我的已购</text>
    </view>
  <!-- </navigator> -->
    <view bindtap="navigateTo" data-url="" class='channel-card-view font-h3'>
      <image class='channel-icon' src='../../images/my/cards.png'></image>
      <text>优惠券</text>
    </view>
    <view bindtap="navigateTo" data-url="../commentators/index" class='channel-card-view font-h3'>
      <image class='channel-icon' src='../../images/my/commentators.png'></image>
