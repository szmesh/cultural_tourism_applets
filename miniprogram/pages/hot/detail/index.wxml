<view class="container">
  <!-- 没有数据提示信息 -->
  <block wx:if="{{model && model._id}}">
    <!-- 图片集 -->
    <view wx:if="{{model.imagesDataSources}}" class="page-section page-section-spacing bottom-margin-23">
      <swiper indicator-dots="{{true}}"
              autoplay="{{banner_properties.autoplay}}"
              circular="{{banner_properties.circular}}"
              vertical="{{banner_properties.vertical}}"
              interval="{{banner_properties.interval}}"
              duration="{{banner_properties.duration}}"
              previous-margin="{{banner_properties.previousMargin}}px"
              next-margin="{{banner_properties.nextMargin}}px"
              class="swiper">
        <block wx:for="{{model.imagesDataSources}}" wx:key="{{item._id}}">
          <swiper-item class="swiper-item">
            <image class="swiper-banner" src="{{item.url}}" />
          </swiper-item>
        </block>
      </swiper>
    </view>

    <view class='page-section page-section-spacing bottom-margin-100'>
      <view class='topTabSwiper'>
      <view class='tab {{currentIndex == 0 ? "tabBorer" : ""}}' data-index="0" bindtap='onTabButtonAction'>解说</view>
      <view class='tab  {{currentIndex == 1 ? "tabBorer" : ""}}' data-index="1" bindtap='onTabButtonAction'>景区简介</view>
      <view class='tab  {{currentIndex == 2 ? "tabBorer" : ""}}' data-index="2" bindtap='onTabButtonAction'>景点目录</view>
    </view>
    <swiper current="{{currentIndex}}" class='info-swiper' duration="300" bindchange='onSwiperChangeAction'>
      <swiper-item>
        <view class='info-swiper-con'>解说主界面</view>
      </swiper-item>
      <swiper-item>
        <view class="cells-title font-h3">景区地址</view>
        <view class="cells-after-title bottom-margin-32 font-h4">{{model.province + model.city + model.zone + model.address}}</view>

        <view class="cells-title font-h3">门票信息</view>
        <view class="cells-after-title bottom-margin-32 font-h4">{{model.tickets_info}}</view>

        <view class="cells-title font-h3">开放时间</view>
        <view class="cells-after-title bottom-margin-32 font-h4">{{model.work_time}}</view>

        <view class="cells-title font-h3">景区信息</view>
        <view class="cells-after-title bottom-margin-32 font-h4">{{model.des}}</view>

        <view class="cells-title font-h3">游玩路线</view>
        <view class="cells-after-title bottom-margin-32 font-h4">{{model.assistance_tips}}</view>

        <view class="cells-title font-h3">景区助手</view>
        <view class="cells-after-title bottom-margin-32 font-h4">{{model.suggestion}}</view>
      </swiper-item>
      <swiper-item>
        <view wx:for="{{model.itemsDataSources}}" wx:key="item._id" class='item-card font-h3'>{{item.name}}</view>
      </swiper-item>
    </swiper>
    </view>
  </block>

  <view wx:else class="page-tips-text font-h3">没有查找到对应景区的信息</view>
</view>