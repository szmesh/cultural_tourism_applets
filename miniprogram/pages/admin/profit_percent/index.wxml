<view class="container">
  <view wx:if="{{0 >= dataSources.length}}" class="page-section page-section-spacing page-tips-text font-h3">还没有分成配置，现在添加一个吧！</view>
  <view wx:else class="page-section page-section-spacing bottom-margin-64">
    <view wx:for="{{dataSources}}" wx:key="item._id" class='spot-card top-margin-64'>
      <text class='font-h3'>{{item.name}}</text>
      <view class='spot-card-button-root-view font-h4'>
        <view data-sid='{{item._id}}' data-index='{{index}}' bindtap='onEditButtonAction'>编辑</view>

        <view data-sid='{{item._id}}' bindtap='onDeleteButtonAction'>删除</view>

        <view data-sid='{{item._id}}' bindtap='onAddScopeButtonAction'>配置景点</view>

        <view data-sid='{{item._id}}' bindtap='onAddItemButtonAction'>配置规则</view>
      </view>
    </view>
  </view>

  <view class='page-full-button bottom-margin-100 font-h3' bindtap='onAddButtonAction'>新增</view>
</view>