/* miniprogram/pages/admin/home_banners/home_banners.wxss */
.list-container{
  padding: 20rpx;
  font-size: 28rpx;
  color: #565656;
  position: relative;
  margin-bottom: 60rpx;
}
.add-btn{
  padding: 10rpx;
  text-align: center;
  border-radius: 6rpx;
  background-color: #f0f0f0;
  font-size: 45rpx;
  font-weight: 400;
  color: #8f8f8f;
  margin-bottom: 15rpx;
}
.banner-item{
  width: 100%;
  box-sizing: border-box;
  background-color: #f0f0f0;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}
.item-img{
  width: 100%;
  height: 390rpx;
}
.info-row{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 14rpx 16rpx;
  margin-top: 5rpx;
  
}
.item-text{
  display: inline-block;
  width: 650rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #525252;
  font-size: 28rpx;
}
.trash-i{
  width: 40rpx;
  height: 40rpx;
}
